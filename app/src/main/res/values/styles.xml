<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="infoTextStyle">@style/info_text</item>
        <item name="tableRow">@style/table_row</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--Primary Header-->
    <style name="h1">
        <item name="android:layout_marginBottom">@dimen/medium_spacer</item>
        <item name="android:layout_marginTop">@dimen/medium_spacer</item>
        <item name="android:textSize">@dimen/extra_large_text</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!--Secondary Header-->
    <style name="h2">
        <item name="android:layout_marginTop">@dimen/large_spacer</item>
        <item name="android:layout_marginLeft">@dimen/large_spacer</item>
        <item name="android:layout_marginRight">@dimen/large_spacer</item>
        <item name="android:layout_marginBottom">@dimen/small_spacer</item>
        <item name="android:textSize">@dimen/extra_large_text</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!--Tertiary Header-->
    <style name="h3">
        <item name="android:layout_margin">@dimen/medium_spacer</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!--Question Text-->
    <style name="question">
        <item name="android:layout_marginBottom">@dimen/medium_spacer</item>
        <item name="android:textSize">@dimen/standard_text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!--Edit Text-->
    <style name="editText">
        <item name="android:layout_marginLeft">@dimen/large_spacer</item>
        <item name="android:layout_marginRight">@dimen/large_spacer</item>
        <item name="android:layout_marginTop">@dimen/medium_spacer</item>
        <item name="android:layout_marginBottom">@dimen/medium_spacer</item>
        <item name="android:textSize">@dimen/standard_text</item>
        <item name="android:hint">Answer here</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--Buttons-->
    <style name="smallButton">
        <item name="android:layout_width">@dimen/small_button</item>
        <item name="android:layout_height">@dimen/small_button</item>
    </style>


    <!--Radio Buttons-->
    <style name="radioButton">
        <item name="android:textSize">@dimen/standard_text</item>
        <item name="android:paddingRight">@dimen/small_spacer</item>
        <item name="android:gravity">left</item>
    </style>

    <!--Checkboxes-->
    <style name="checkBox">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:layout_marginLeft">@dimen/small_spacer</item>
        <item name="android:layout_marginTop">@dimen/small_spacer</item>
        <item name="android:layout_marginBottom">@dimen/small_spacer</item>
    </style>

    <!--Info Text-->
    <style name="info_text">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <!--Table Row-->
    <style name="table_row">
        <item name="android:paddingLeft">@dimen/medium_spacer</item>
        <item name="android:paddingRight">@dimen/medium_spacer</item>
        <item name="android:paddingBottom">@dimen/medium_spacer</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>

    <!--Cards-->
    <style name="card" parent="CardView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium_spacer</item>
        <item name="cardBackgroundColor">#FCFCFC</item>

    </style>
</resources>
